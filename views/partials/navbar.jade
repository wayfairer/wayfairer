.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        | Wayfa
        span.orange i
        | rer.co
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if !user
          li(class=title=='Home'?'active':undefined)
            a(href='/') Home
          li(class=title=='How it works'?'active':undefined)
            a(href='/how-it-works') How it works
        else
          li(class=title=='Dashboard'?'active':undefined)
            a(href='/dashboard') Dashboard
          li(class=title=='New Experience'?'active':undefined)
            a(href='/experience/new') List New Experience
        li(class=title=='All Experiences'?'active':undefined)
            a(href='/experiences/all') Explore
        //li(class=title=='API Examples'?'active':undefined)
          a(href='/api') API Examples
        //li(class=title=='Contact'?'active':undefined)
          a(href='/contact') Contact
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Login
          li(class=title=='Create Account'?'active':undefined)
            a.navbar-cta(href='/signup') Signup
        else
          li.dropdown(class=title=='Account'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              //else
                img(src='#{user.gravatar(60)}')
              | Hello 
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/profile')
                  span.ion-person
                  | Public Profile
              li
                a(href='/account')
                  span.ion-settings
                  | Account Settings
              li.divider
              li
                a(href='/logout')
                  span.ion-log-out
                  |  Logout